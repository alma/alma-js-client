{
  "name": "@alma/client",
  "version": "1.0.0",
  "description": "JavaScript client library for Alma API - https://getalma.eu",
  "keywords": [],
  "main": "dist/alma-client.js",
  "umd:main": "dist/alma-client.umd.js",
  "module": "dist/alma-client.m.js",
  "esmodule": "dist/alma-client.es.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Olivier Lance <olivier.lance@getalma.eu>",
  "repository": {
    "type": "git",
    "url": "https://github.com/alma/alma-js-client"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "microbundle watch",
    "test": "jest --coverage=false",
    "test:no-coverage": "jest",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "npx eslint src test --ext .js,.ts",
    "lint:fix": "npx eslint --fix src test --ext .js,.ts",
    "prebuild": "rm -rf dist",
    "build": "microbundle",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@google/semantic-release-replace-plugin": "^1.0.2",
    "@octokit/core": "^3.2.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "commitizen": "^4.2.1",
    "core-js": "^3.6.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-config": "^26.6.0",
    "lint-staged": "^10.4.2",
    "microbundle": "^0.12.4",
    "prettier": "^2.1.2",
    "rollup": "^1.32.1",
    "semantic-release": "^17.2.2",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "axios": "^0.20.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod && npm run build"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": [
        "<rootDir>/src/$1"
      ],
      "^test/(.*)$": [
        "<rootDir>/test/$1"
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "dist/**"
              ],
              "from": "%%_SEMANTIC_VERSION_%%",
              "to": "${nextRelease.version}",
              "countMatches": true
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
